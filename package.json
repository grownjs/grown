{
  "name": "homegrown",
  "version": "0.1.0",
  "description": "Homegrown nodejs web framework",
  "author": "Alvaro Cabrera",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "dev": "tarima -w",
    "dev:spec": "jasmine-node spec --coffee --verbose --autoTest --captureExceptions --watchFolders lib",
    "build": "tarima -fq",
    "lint": "eslint lib spec",
    "spec": "jasmine-node spec --coffee --noStackTrace --captureExceptions",
    "cover": "istanbul cover --root lib --x '**/spec/**' -- jasmine-node --coffee spec",
    "cover:up": "codecov --file=coverage/lcov.info --disable=gcov -e TRAVIS_NODE_VERSION",
    "example": "node examples/_runner.js",
    "test": "yarn build && yarn cover"
  },
  "tarima": {
    "dest": "lib",
    "bundle": [
      "**/*.js"
    ],
    "rename": [
      "**/src/**:{filepath/1}/{filename}.{extname}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6"
      },
      "rollup": {
        "format": "cjs",
        "plugins": [
          "rollup-plugin-json"
        ]
      }
    }
  },
  "dependencies": {
    "dotenv": "^2.0.0",
    "glob": "^7.0.6"
  },
  "devDependencies": {
    "body-parser": "^1.15.2",
    "buble": "^0.15.1",
    "chokidar": "^1.6.1",
    "codecov": "^1.0.1",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-alpha.2",
    "csurf": "^1.9.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^5.0.3",
    "eslint-plugin-import": "^1.14.0",
    "express-session": "^1.14.1",
    "formidable": "^1.0.17",
    "istanbul": "^0.4.3",
    "jasmine-node": "2.0.0-beta4",
    "json-schema-sequelizer": "pateketrueke/json-schema-sequelizer",
    "method-override": "^2.3.6",
    "morgan": "^1.7.0",
    "rollup": "^0.39.2",
    "rollup-plugin-json": "^2.1.0",
    "route-mappings": "^0.3.1",
    "sequelize": "^3.27.0",
    "serve-index": "^1.8.0",
    "serve-static": "^1.11.1",
    "source-map-support": "^0.4.8",
    "sqlite3": "^3.1.8",
    "std-mocks": "^1.0.1",
    "tarima-cli": "gextech/tarima-cli",
    "winston": "^2.3.0"
  }
}
