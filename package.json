{
  "name": "homegrown",
  "version": "0.1.0",
  "description": "Homegrown nodejs web framework",
  "author": "Alvaro Cabrera",
  "license": "MIT",
  "scripts": {
    "dev": "jasmine-node spec --coffee --verbose --autoTest --watchFolders lib",
    "dev:lint": "eslint lib spec",
    "dev:spec": "jasmine-node spec --coffee --noStackTrace --captureExceptions",
    "cover": "istanbul cover --root lib --x '**/spec/**' -- jasmine-node --coffee spec",
    "cover:up": "codecov --file=coverage/lcov.info --disable=gcov -e TRAVIS_NODE_VERSION",
    "example": "node examples/_runner.js",
    "test": "npm run dev:lint && npm run dev:spec --"
  },
  "dependencies": {
    "dotenv": "^2.0.0",
    "glob": "^7.0.6",
    "route-mappings": "^0.3.1"
  },
  "devDependencies": {
    "body-parser": "^1.15.2",
    "codecov": "^1.0.1",
    "csurf": "^1.9.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^5.0.3",
    "eslint-plugin-import": "^1.14.0",
    "express-session": "^1.14.1",
    "formidable": "^1.0.17",
    "istanbul": "^0.4.3",
    "jasmine-node": "2.0.0-beta4",
    "method-override": "^2.3.6",
    "morgan": "^1.7.0",
    "pg": "^6.1.0",
    "sequelize": "^3.24.1",
    "serve-index": "^1.8.0",
    "serve-static": "^1.11.1",
    "sqlite3": "^3.1.4"
  }
}
