{
  "name": "grown",
  "version": "1.1.9",
  "homepage": "https://soypache.co/grown/",
  "description": "Experimental DSL for web-apps",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "grown": "cli"
  },
  "files": [
    "cli",
    "cli.js",
    "index.js",
    "framework/apps",
    "framework/lib",
    "framework/*.js"
  ],
  "scripts": {
    "dev": "npm run test:unit -- -w",
    "lint": "eslint *.js framework packages/*/*.js $(find packages -type d -maxdepth 2 | grep -vE 'node_modules|coverage|nyc_output')",
    "test": "npm run coverage -- npm run test:unit --",
    "test:ci": "npm test && nyc report -r lcov",
    "test:dev": "npm test && nyc report -r html",
    "test:run": "NODE_ENV=test _mocha --exit --recursive -bR spec --colors",
    "test:unit": "npm run test:run framework/tests/*.test.js --",
    "coverage": "nyc -s -x '**/tests/**' -x '**/*.test.js'",
    "pretest": "npm run lint",
    "pretest:ci": "npm run pretest"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/grownjs/grown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grownjs/grown.git"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.14.0",
    "lerna": "^2.8.0",
    "lodash": ">=4.17.11",
    "lodash.template": ">=4.5.0",
    "mem": ">=4.0.0",
    "minimist": ">=1.2.2",
    "mocha": "^5.2.0",
    "nyc": "^15.1.0",
    "std-mocks": "^1.0.1",
    "testdouble": "^3.12.4"
  },
  "dependencies": {
    "@grown/bud": "^0.0.22",
    "@grown/cli": "^0.0.26",
    "@grown/server": "^0.0.16"
  }
}
