{
  "name": "{{paramCase APP_NAME}}",
  "version": "0.0.0",
  "scripts": {
    "test": "{{#IS_NPM}}npm run{{/IS_NPM}}{{^IS_NPM}}yarn{{/IS_NPM}} lint",
    "lint": "eslint app bin boot config",
    "start": "grown up",
    "debug": "grown repl -i `date +'%Y-%m-%d_%H%M'`",
    "watch": "{{#IS_NPM}}npm run{{/IS_NPM}}{{^IS_NPM}}yarn{{/IS_NPM}} dev -- -P localhost:8080 -r bin/server",
    "dist": "tarima -Ofqe production",
    "dev": "tarima -ed"
  },
  "tarima": {
    "cwd": ".",
    "src": [
      "app/views",
      "app/assets"
    ],
    "watch": [
      "app/server.js",
      "app/models",
      "app/controllers",
      "boot",
      "config",
      ".env",
      "package.json"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ]{{#BUNDLER}},
    "bundle": [
      "**/javascripts/*.js"
    ]{{/BUNDLER}},
    "rename": [
      "**/views/**:{fullpath/1}",
      "**/assets/**:public/{fullpath/2}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ]{{#RELOADER}},
    "devPlugins": [{{#IS_BROWSER_SYNC}}
      "tarima-browser-sync"{{/IS_BROWSER_SYNC}}{{^IS_BROWSER_SYNC}}
      "tarima-lr"{{/IS_BROWSER_SYNC}}
    ]{{/RELOADER}},
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "images"
      }{{#RELOADER}}{{#IS_BROWSER_SYNC}},
      "tarima-browser-sync": {
        "timeout": 100
      }{{/IS_BROWSER_SYNC}}{{^IS_BROWSER_SYNC}},
      "tarima-lr": {
        "timeout": 100
      }{{/IS_BROWSER_SYNC}}{{/RELOADER}}
    }{{#CAN_BUNDLE}},
    "bundleOptions": {
      {{#ES6}}{{^IS_BUBLE}}"transpiler": "{{ES6}}",
      {{/IS_BUBLE}}{{/ES6}}{{#BUNDLER}}{{^IS_ROLLUP}}"bundler": "{{BUNDLER}}",
      {{/IS_ROLLUP}}{{#IS_ROLLUP}}"bundleCache": true,
      "entryCache": true,
      {{/IS_ROLLUP}}{{/BUNDLER}}"extensions": {
        {{#ES6}}"js": "es6",
        {{/ES6}}"css": "{{#IS_POSTCSS}}post{{/IS_POSTCSS}}{{^IS_POSTCSS}}{{CSS_LANG}}{{/IS_POSTCSS}}"
      }{{#IS_BUBLE}},
      "buble": {
        "jsx": "h"
      }{{/IS_BUBLE}}{{#IS_BABEL}},
      "babel": {
        "presets": [
          [
            "es2015",
            {}
          ]
        ],
        "plugins": [
          [
            "transform-react-jsx",
            {
              "pragma": "h"
            }
          ]
        ]
      }{{/IS_BABEL}}{{#IS_LESS}},
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }{{/IS_LESS}}{{#IS_POSTCSS}},
      "postcss": {
        "plugins": [
          "postcss-import",
          "postcss-cssnext"
        ]
      }{{/IS_POSTCSS}}
    }{{/CAN_BUNDLE}}
  }
}
