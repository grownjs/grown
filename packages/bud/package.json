  "license": "MIT",
  "scripts": {
    "dev": "npm test -- -w",
    "lint": "eslint util tests *.js",
    "test": "npm run test:unit --",
    "test:ci": "npm run coverage:all && npm run report -- -r lcov",
    "test:all": "npm run test:run tests && npm run report -- -r html",
    "test:run": "NODE_ENV=test _mocha --exit --recursive -bR spec --colors",
    "test:unit": "npm run test:run tests --",
    "coverage": "nyc -s -x '**/tests/**' -x '**/*.test.js'",
    "coverage:all": "npm run coverage -- npm run test:all",
    "coverage:unit": "npm run coverage -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "report": "nyc report",
    "pretest": "npm run lint"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "clean-stack": "^2.0.0",
    "debug": "^4.1.0",
    "dotenv": "^6.2.0",
    "global-or-local": "^0.1.4",
    "object-new": "^0.4.0",
    "sastre": "^0.2.1",
    "source-map-support": "^0.5.3",
    "wargs": "^0.8.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "lodash": ">=4.17.11",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "std-mocks": "^1.0.1",
    "testdouble": "^3.12.4"
  }
}
