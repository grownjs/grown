{
  "name": "application",
  "version": "0.0.1",
  "private": true,
  "description": "Grown application skeleton",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "license": "MIT",
  "main": "main.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "grown": "grown",
    "start": "node .",
    "logs": "logrof --",
    "debug": "ndb npm run watch --",
    "watch": "nodemon --ignore '{build,docker,logs,web,e2e}/**' --ignore '**/generated/**' --ignore Makefile",
    "watch:mail": "mailor watch lib/mailer/templates -d lib/mailer/generated --no-open",
    "build:mail": "mailor build lib/mailer/templates -d lib/mailer/generated",
    "mocha": "NODE_ENV=test _mocha -c --exit --recursive",
    "schema": "npm run schema-to:json && npm run schema-to:graphql && npm run schema-to:protobuf",
    "schema-to:json": "json-schema-to -tw api/schema -pbc index --json",
    "schema-to:graphql": "json-schema-to -tw api/schema -pc index --graphql",
    "schema-to:protobuf": "json-schema-to -tw api/schema -pc index --protobuf -br ../common -k API",
    "dev": "tarima watch -p 4001 -P '/api,/auth -> 3000'",
    "dist": "tarima -mqe $NODE_ENV",
    "size": "npm run dist && size-limit",
    "test": "npm run test:unit && npm run test:functional --",
    "bdd": "bdd-tc e2e/features --",
    "test:bdd": "npm run bdd -- npm run test:e2e --",
    "test:e2e": "testcafe --color ${BROWSER:-chrome:headless}",
    "test:e2e:ci": "BASE_URL=http://web:4001 testcafe --ports 9505,9506 remote:1",
    "test:unit": "npm run mocha -- -bR spec 'api/**/*.test.js'",
    "test:functional": "npm run mocha -- -t 180000 -bR spec 'testing/**/*.test.js'",
    "test:coverage": "nyc --silent -x '**/{fixtures}/**' -x '**/fixtures.js' -x '**/*.test.js'",
    "test:coverage:unit": "npm run test:coverage -- npm run test:unit --",
    "test:coverage:functional": "npm run test:coverage -- npm run test:functional",
    "test:report": "nyc report"
  },
  "size-limit": [
    {
      "webpack": false,
      "path": "build/assets/**/*.js"
    }
  ],
  "tarima": {
    "from": "web/front",
    "public": "build",
    "copy": [
      "web/public/**"
    ],
    "rename": [
      "**/front/**:{fullpath/2}"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**",
      "!**/{lib,shared,components}/**"
    ],
    "bundle": [
      "**/main.js"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less",
        "gql": "json"
      },
      "rollup": {
        "context": "window",
        "plugins": [
          "rollup-plugin-node-resolve",
          "rollup-plugin-commonjs",
          "rollup-plugin-svelte"
        ]
      },
      "buble": {
        "objectAssign": "Object.assign"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "bdd-tc": "^0.0.6",
    "buble": "^0.19.3",
    "chai": "^4.1.2",
    "csso": "^3.5.1",
    "json-schema-to": "^0.0.18",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "mocha": "^6.0.0",
    "nyc": "^14.1.0",
    "open": ">=6.0.0",
    "pug": "^2.0.3",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "svelte": "3.3.0",
    "svql": "^0.0.15",
    "tarima": "^4.6.0",
    "terser": "^4.3.8",
    "testcafe": "^1.0.1",
    "uglify-es": "^3.3.9",
    "yrv": "^0.0.6"
  },
  "dependencies": {
    "@grown/graphql": "^0.0.6",
    "@grown/grpc": "^0.0.5",
    "@grown/model": "^0.0.13",
    "@grown/parsers": "^0.0.3",
    "@grown/schema": "^0.0.4",
    "@grown/session": "^0.0.3",
    "berro": "^0.0.2",
    "express-useragent": "^1.0.12",
    "grown": "^1.1.4",
    "logro": "^0.1.4",
    "mailor": "^0.0.9",
    "pg": "^7.9.0",
    "rand-token": "^0.4.0"
  }
}
