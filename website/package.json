{
  "name": "grown",
  "version": "1.0.0",
  "description": "Experimental DSL for web-apps",
  "repository": "git@github.com:pateketrueke/grown.git",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "tarima watch -dp 3001",
    "dist": "tarima -fqe"
  },
  "tarima": {
    "cwd": ".",
    "from": "src",
    "public": "build",
    "watching": [
      ".env",
      "package.json"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "**:{fullpath/1}",
      "**/pages/**/*.html:{basedir/1}/{name}/index.html"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "kramed": {
        "highlight": true
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.6",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-pug": "^1.1.1",
    "highlight.js": "^9.15.6",
    "kramed": "^0.5.6",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.0-beta11",
    "rollup": "^1.1.2",
    "talavera": "^0.6.2",
    "tarima": "^4.2.8",
    "tarima-lr": "^0.4.1"
  }
}
