{
  "name": "grown",
  "version": "1.0.0",
  "description": "Experimental DSL for web-apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/tacoss/plate.git",
    "issues": "https://github.com/tacoss/plate/issues"
  },
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tarima watch -d",
    "dist": "tarima -mqe $NODE_ENV",
    "check": "eslint 'src/**/*.{js,pug}'",
    "predist": "npm run check"
  },
  "tarima": {
    "from": "src",
    "public": "build",
    "copy": {
      "public": "."
    },
    "filter": [
      "!**/lib/**"
    ],
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "**/pages/**/!(index).html:{basedir}/{name}/index.html",
      "**/{pages,resources}/**:{fullpath/1}",
      "**/index.(css|js):{basedir}.{ext}",
      "**:{fullpath/1}"
    ],
    "watching": [
      ".env",
      "package.json"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "plugins": [
      "talavera"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "kramed": {
        "highlight": true
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.6",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-pug": "^1.1.1",
    "highlight.js": "^9.15.6",
    "kramed": "^0.5.6",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "lodash": "^4.17.15",
    "lodash.template": ">=4.5.0",
    "pug": "^2.0.0-beta11",
    "rollup": "^1.1.2",
    "talavera": "^0.7.4",
    "tarima": "^4.4.4",
    "tarima-lr": "^0.4.1",
    "terser": "^3.17.0"
  }
}
